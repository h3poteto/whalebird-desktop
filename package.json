{
  "private": true,
  "name": "Whalebird",
  "description": "Electron based Fediverse client application",
  "version": "6.0.2",
  "author": "Akira Fukushima <h3.poteto@gmail.com>",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "build:mas": "nextron build --config ./electron-builder.mas.yml",
    "package:appx2": "nextron build --win --x64 && electron-windows-store --assets ./resources/icons --input-directory ./dist/win-unpacked --output-directory ./dist/appx --package-name Whalebird --package-display-name Whalebird --package-version 6.0.2.0 --publisher-display-name h3poteto --identity-name 45610h3poteto.Whalebird",
    "postinstall": "electron-builder install-app-deps",
    "typecheck": "tsc -p renderer --noEmit && tsc -p main --noEmit",
    "lint": "eslint renderer --ext ts,tsx",
    "thirdparty": "license-checker --production --json > renderer/thirdparty.json"
  },
  "dependencies": {
    "@emoji-mart/react": "^1.1.1",
    "@material-tailwind/react": "^2.1.8",
    "blurhash": "^2.0.5",
    "dayjs": "^1.11.10",
    "dexie": "^3.2.4",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.1.0",
    "emoji-mart": "^5.5.2",
    "megalodon": "9.2.2",
    "react-blurhash": "^0.3.0",
    "react-hotkeys-hook": "^4.4.1",
    "react-icons": "^5.0.0",
    "react-intl": "^6.5.1",
    "react-virtuoso": "^4.6.2",
    "sanitize-html": "^2.11.0"
  },
  "devDependencies": {
    "@babel/runtime-corejs3": "^7.23.2",
    "@electron/notarize": "^2.1.0",
    "@types/node": "^20.0.0",
    "@types/react": "18.2.19",
    "@types/sanitize-html": "^2.9.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "autoprefixer": "^10.4.16",
    "electron": "^27.3.0",
    "electron-builder": "^24.6.4",
    "electron-windows-store": "^2.1.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "next": "^12.3.4",
    "nextron": "^8.12.0",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2"
  },
  "packageManager": "yarn@3.8.1"
