{
  "private": true,
  "name": "Whalebird",
  "description": "Electron based Fediverse client application",
  "version": "6.2.1",
  "author": "Akira Fukushima <h3.poteto@gmail.com>",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "build:mas": "nextron build --config ./electron-builder.mas.yml",
    "build:appx2": "nextron build --win --x64 && electron-windows-store --assets ./resources/icons --input-directory ./dist/win-unpacked --output-directory ./dist/appx --package-name Whalebird --package-display-name Whalebird --package-version 6.2.1.0 --publisher-display-name h3poteto --identity-name 45610h3poteto.Whalebird",
    "postinstall": "electron-builder install-app-deps",
    "typecheck": "tsc -p renderer --noEmit && tsc -p main --noEmit",
    "lint": "eslint renderer --ext ts,tsx --ignore-pattern 'renderer/.next/*'",
    "thirdparty": "license-checker --production --json > renderer/thirdparty.json",
    "dev:web": "NEXT_PUBLIC_CLIENT_ENV=browser next dev renderer",
    "build:web": "NEXT_PUBLIC_CLIENT_ENV=browser next build renderer",
    "start:web": "cd renderer && NEXT_PUBLIC_CLIENT_ENV=browser next start"
  },
  "dependencies": {
    "@emoji-mart/react": "^1.1.1",
    "@material-tailwind/react": "^2.1.8",
    "blurhash": "^2.0.5",
    "dayjs": "^1.11.10",
    "dexie": "^4.0.0",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.1.0",
    "emoji-mart": "^5.5.2",
    "megalodon": "10.1.1",
    "parse-link-header": "^2.0.0",
    "react-blurhash": "^0.3.0",
    "react-hotkeys-hook": "^5.0.0",
    "react-icons": "^5.0.0",
    "react-intl": "^7.0.0",
    "react-virtuoso": "^4.6.2",
    "sanitize-html": "^2.11.0",
    "system-font-families": "^0.6.0"
  },
  "devDependencies": {
    "@babel/runtime-corejs3": "^7.23.2",
    "@electron/notarize": "^2.1.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@types/node": "^22.0.0",
    "@types/parse-link-header": "^2.0.3",
    "@types/react": "18.2.19",
    "@types/sanitize-html": "^2.9.4",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "autoprefixer": "^10.4.16",
    "electron": "34",
    "electron-builder": "^25.0.0",
    "electron-windows-store": "^2.1.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-react": "^7.33.2",
    "globals": "^16.0.0",
    "next": "^14.0.0",
    "nextron": "^9.0.0",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.71.1",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2"
  },
  "packageManager": "yarn@4.9.1"
}
